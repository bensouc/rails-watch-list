<div class="container">
  <h1>My lists</h1>
  <div>
    <% @lists.each do |list| %>
    <div class="card-category d-flex justify-content-around ">
      <%= cl_image_tag list.photo.key, width: 400, height: 300, crop: :fill %>
      <%= link_to list.name, list_path(list), class:'fs-4 text-white' %>
      <%= link_to list_path(list),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-minus-square"></i>
      <%end%>
    </div>
    <%end%>
  </div>
  <div class='d-flex'>
    <%= link_to 'Add list', new_list_path, class:'btn btn-primary btn-sm m-3'%>
  </div>
</div>
