<div class="container">
  <h1>My lists</h1>
  <div>
    <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3),
              rgba(0,0,0,0.3),
              url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
      <%= link_to list.name, list_path(list), class:'fs-4 text-white' %>
      <%= link_to list_path(list),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-minus-square"></i>
      <%end%>
    </div>
      <%= link_to list_path(list)%>
    <%end%>
  </div>
  <div class='d-flex'>
    <%= link_to 'Add list', new_list_path, class:'btn btn-primary btn-sm m-3'%>
  </div>
</div>
