<div class="container">
  <h1><%=@list.name %></h1>


  <div class="full-list d-flex flex-column">
    <div class='d-flex justify-content-between '>
      <div>
        <%= link_to 'Back to Lists' , lists_path%>
      </div>
      <div>
        <%= link_to 'Add movie' , new_list_bookmark_path(@list)%>
      </div>
    </div>
    <div class='d-flex'>
    <% @list.movies.each do |movie|%>
    <div class="card w-9 pt-2 m-3" style="width: 18rem;" >
      <img src="<%=movie.poster_url%>" class="card-img-top img-thumbnail" alt="...">
      <div class="card-body">
        <h4 class="card-title border-bottom " style="height: 4rem" ><%=movie.title%></h4>
         <p class="card-text "><%=movie.overview%></p>
        <%= link_to 'Remove from the list', list_bookmark_path(movie.bookmark_ids),
        method: :delete,
        class:'btn btn-primary btn-sm m-3'%>
      </div>
    </div>
  <%end%>
    </div>
</div>
